generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ðŸ”” Enums
enum SubscriptionStatus {
  NONE
  INCOMPLETE
  ACTIVE
  PAST_DUE
  CANCELED
}

enum BillingSource {
  STRIPE
  COMPED
}

enum Plan {
  STARTER
  PROFESSIONAL
  INTENSIVE
}

// ðŸ”” New enum for onboarding
enum WorkMode {
  REMOTE
  HYBRID
  ONSITE
}

model Client {
  id                    String   @id @default(uuid())
  name                  String
  slug                  String?  @unique
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  stripeCustomerId      String?
  stripeSubscriptionId  String?

  // Billing fields
  plan                  Plan?
  billingSource         BillingSource      @default(STRIPE)
  subscriptionStatus    SubscriptionStatus @default(NONE)

  users           User[]
  jobApplications JobApplication[]
}

model User {
  id        String    @id @default(uuid())
  email     String    @unique
  password  String
  name      String?
  clientId  String?
  client    Client?   @relation(fields: [clientId], references: [id])
  createdAt DateTime  @default(now())

  // ðŸ”” Onboarding
  onboardingCompleted Boolean     @default(false)
  profile             UserProfile?

  passwordResetTokens PasswordResetToken[]

  sessions  Session[]
}

// ðŸ”” New model for onboarding data
model UserProfile {
  id        String   @id @default(uuid())

  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id])

  // Step 1 â€“ target roles
  targetRoles String[]  // text[]

  // Step 2 â€“ location preferences
  regions   String[]    // e.g. ["Entire world", "Europe"]
  countries String[]    // e.g. ["France", "Germany"]
  city      String?
  workMode  WorkMode?

  // Step 3 â€“ CV metadata (optional)
  cvUrl        String?
  cvFilename   String?
  cvUploadedAt DateTime?
  cvParsedText String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique
  userId       String
  user         User     @relation(fields: [userId], references: [id])
  expires      DateTime
}

model JobApplication {
  id           String   @id @default(uuid())

  // Maps to existing columns in job_applications
  clientId     String   @map("client_id")
  contactEmail String?  @map("contact_email")
  insertedAt   DateTime @default(now()) @map("inserted_at")

  client       Client   @relation(fields: [clientId], references: [id])

  @@index([clientId])
  @@map("job_applications")
}

model PasswordResetToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id])

  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([userId])
}
